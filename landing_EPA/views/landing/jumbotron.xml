<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="jumbotron_landing" name="Jumbotron Section">
        <!-- CSS Styling -->
        <style>
        .nav-link {
            text-transform: uppercase;
            font-weight: bold;
        }

        .jumbotron {
            position: relative;
            background: url('/landing_EPA/static/src/img/landing/jb-landing.webp') center/cover no-repeat;
            color: white;
            text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
            height: 800px;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            border-radius: 0;
            margin-top: 70px; /* Offset untuk fixed-top navbar */
        }

        .jumbotron::before {
            content: '';
            position: absolute;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.3);
            z-index: 1;
        }

        .jumbotron .container {
            position: relative;
            z-index: 2;
        }

        .navbar.fixed-top {
            background-color: #ece7e1; /* Ganti dengan warna yang diinginkan */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Efek bayangan */
            border-bottom: 1px solid #dddddd; /* Garis bawah */
            z-index: 1030; /* Z-index lebih tinggi untuk menghindari tumpang tindih */
        }

        .navbar-brand img {
            height: 50px;
        }

        /* Sidebar menu styles */
        .mobile-sidebar {
            position: fixed;
            top: 0;
            right: -100%;
            height: 100%;
            width: 300px;
            background-color: #fff;
            z-index: 1050;
            overflow-y: auto;
            transition: right 0.3s ease;
        }

        .mobile-sidebar.open {
            right: 0;
        }

        .mobile-sidebar .nav-link {
            color: black !important;
            font-size: 1.2rem;
            padding: 10px 15px;
        }

        .mobile-sidebar .close-btn {
            text-align: right;
            padding: 10px 15px;
            font-size: 1.5rem;
            color: black;
            cursor: pointer;
        }

        /* Navbar Toggler */
        .navbar-toggler {
            border: none;
            padding: 0;
        }

        .navbar-toggler-icon {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 30px;
            height: 20px;
        }

        .navbar-toggler-icon div {
            height: 3px;
            background-color: #ed781b; /* Warna garis burger */
            border-radius: 4px;
        }

        .navbar-toggler:hover .navbar-toggler-icon div {
            background-color: #d5691b;
        }

        /* Styling khusus untuk desktop */
        @media (min-width: 992px) {
            .navbar-brand img {
                height: 70px;
            }

            .nav-link {
                color: #333 !important; /* Ubah warna teks link */
                font-size: 1.2rem;
                padding: 0 15px;
                transition: color 0.3s ease;
            }

            /* Efek hover */
            .nav-link:hover {
                color: #ed781b !important;
            }

            .navbar-nav {
                display: flex !important;
                gap: 10px;
            }

            .mobile-sidebar {
                display: none;
            }

            .jumbotron h1 {
                font-size: 9rem;
            }
        }
        </style>

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container-fluid d-flex justify-content-between">
                <a class="navbar-brand" href="/">
                    <img src="/landing_EPA/static/src/img/logo.png" alt="Brand Logo"/>
                </a>
                <!-- Mobile Sidebar -->
                <div id="mobileSidebar" class="mobile-sidebar">
                    <div class="close-btn" id="closeSidebar" style="color: #ed781b;">x</div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/about_page">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/servis_page">Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/project_page">Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/news_page">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/safety_page">Safety</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contactModal" data-toggle="modal">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <!-- Toggler button for mobile -->
                <button class="navbar-toggler" type="button" id="mobileToggler" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <div></div>
                        <div></div>
                        <div></div>
                    </span>
                </button>
                <!-- Menu for Desktop -->
                <div class="collapse navbar-collapse justify-content-end d-none d-lg-flex">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/about_page">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/servis_page">Service</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/project_page">Project</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/news_page">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/safety_page">Safety</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contactModal" data-toggle="modal">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Jumbotron -->
        <div class="jumbotron text-center py-5 mb-0">
            <div class="container col-12">
                <h1 class="display-4 col-12" style="font-weight: bold; font-size: 100px; position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%);">
            BUILDING <span style="color: #ed781b;">VISION</span>
                </h1>
            </div>
        </div>

        <!-- JavaScript -->
        <script>
            document.getElementById('mobileToggler').addEventListener('click', function() {
                document.getElementById('mobileSidebar').classList.add('open');
            });

            document.getElementById('closeSidebar').addEventListener('click', function() {
                document.getElementById('mobileSidebar').classList.remove('open');
            });
        </script>
    </template>
</odoo>
